<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@drawable/loginbackground">


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
           />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/jason"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
           />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:padding="10dp" android:paddingBottom="24dp"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:text="Sam Thapa"
                android:textColor="#000000" android:textSize="20sp" android:textStyle="bold"/>

            <TextView
                android:id="@+id/studentMajorAndLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp" android:text="CSE/Senior"
                android:textColor="#fff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studentMajorAndLevel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Telephone  5628815062"
                android:textColor="#fff" android:textSize="14sp"/>


            <TextView
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/phoneNumber"
                android:layout_margin="20dp"
                android:gravity="center"
                android:lines="10"
                android:maxLines="10"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryDark"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/address1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:lines="10"
                android:maxLines="10"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#f9fbff"></TextView>


            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:id="@+id/imageView"/>
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="20dp" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#6e6a72" android:text="Sign Out" android:textSize="10sp"/>


        </RelativeLayout>



    </RelativeLayout>
</ScrollView>